<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>

		<PackageId>Kritjara.Collections.ObjectModel</PackageId>
		<Version>1.0.0</Version>
		<Authors>Kritjara</Authors>
		<Description>Продвинутая версия обычной ObservableCollection</Description>

		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageTags>collections;observable;</PackageTags>
		<RepositoryUrl>https://github.com/Kritjara/ObservableCollection</RepositoryUrl>
		<RepositoryType>git</RepositoryType>

		<PackageOutputPath>./nupkg</PackageOutputPath>

		<!-- Добавьте эти строки для документации -->
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
	</PropertyGroup>

</Project>
